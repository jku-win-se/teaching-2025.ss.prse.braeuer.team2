<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jku.se.Controller.UserSearchResultsController">

    <VBox spacing="15" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="User Details" />

        <GridPane hgap="10" vgap="10">
            <!-- Row 0 -->
            <Label style="-fx-font-weight: bold;" text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Row 1 -->
            <Label style="-fx-font-weight: bold;" text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Row 2 -->
            <Label style="-fx-font-weight: bold;" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Row 3 -->
            <Label style="-fx-font-weight: bold;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Row 4 -->
            <Label style="-fx-font-weight: bold;" text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <!-- Row 5 -->
            <Label style="-fx-font-weight: bold;" text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Row 6 -->
            <Label style="-fx-font-weight: bold;" text="Failed Attempts:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="failedAttemptsField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <!-- Row 7 -->
            <Label style="-fx-font-weight: bold;" text="Created At:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <Label fx:id="createdAtLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button onAction="#handleUpdate" prefHeight="33.0" prefWidth="73.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15;" text="Update" />
            <Button onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 15;" text="Delete" />
            <Button onAction="#handleClose" style="-fx-background-color: #7734db; -fx-text-fill: white; -fx-padding: 8 15;" text="Close" />
        </HBox>
    </VBox>
</AnchorPane>
