<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="300.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jku.se.Controller.FilterPanelAdminController">

    <VBox alignment="TOP_LEFT" layoutX="15.0" layoutY="15.0" spacing="10">
        <!-- Titel -->
        <Label style="-fx-font-weight: bold; -fx-padding: 0 0 5 0;" text="Rechnungen filtern:" />

        <!-- Rechnungs-ID Filter -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <CheckBox fx:id="checkboxRechnungsID" minWidth="100" text="Rechnungs-ID" />
            <TextField fx:id="textfieldRechnungsID" prefWidth="150.0" />
        </HBox>

        <!-- Typ Filter -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <CheckBox fx:id="checkboxTyp" minWidth="100" text="Typ" />
            <ComboBox fx:id="comboBoxTyp" prefWidth="150.0" />
        </HBox>

        <!-- Benutzer Filter -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <CheckBox fx:id="checkboxBenutzer" minWidth="100" text="Benutzer" />
            <TextField fx:id="textfieldBenutzer" prefWidth="150.0" />
        </HBox>

        <!-- Status Filter -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <CheckBox fx:id="checkboxStatus" minWidth="100" text="Status" />
            <ComboBox fx:id="comboBoxStatus" prefWidth="150.0" />
        </HBox>

        <!-- Aktueller Monat Filter -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <CheckBox fx:id="checkboxCurrentMonth" minWidth="100" text="Aktueller Monat" />
        </HBox>

        <!-- Filter Button -->
        <Button onAction="#applyFilters" prefHeight="27.0" prefWidth="261.0" text="Filter anwenden" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
            </padding>
        </Button>
    </VBox>
</AnchorPane>
