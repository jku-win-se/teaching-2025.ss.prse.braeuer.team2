<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jku.se.Controller.StatisticsController">
   <children>
      <Button fx:id="btn_back" layoutX="14.0" layoutY="14.0" onAction="#handleBack" text="⬅ Zurück" />

       <ComboBox fx:id="statSelector" layoutX="34.0" layoutY="64.0" prefHeight="26.0" prefWidth="254.0" />

      <BarChart fx:id="barChart" horizontalGridLinesVisible="false" layoutX="14.0" layoutY="104.0" prefHeight="373.0" prefWidth="434.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
      <PieChart fx:id="pieChart" layoutX="478.0" layoutY="156.0" prefHeight="187.0" prefWidth="132.0" />
      <ComboBox fx:id="typeSelector" layoutX="298.0" layoutY="64.0" prefHeight="26.0" prefWidth="133.0" />

       <Button fx:id="exportCSVButton" layoutX="578.0" layoutY="401.0" text="Export to CSV" />
       <Button fx:id="exportPDFButton" layoutX="448.0" layoutY="401.0" text="Export to PDF" />
   </children>
</AnchorPane>
