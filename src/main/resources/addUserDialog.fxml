<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jku.se.Controller.AddUserController">
    <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add New User" />

        <GridPane hgap="10" vgap="10">
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="roleComboBox" prefHeight="25.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ComboBox fx:id="statusComboBox" prefHeight="25.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="cancelButton" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
            <Button fx:id="saveButton" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save" />
        </HBox>
    </VBox>
</AnchorPane>
